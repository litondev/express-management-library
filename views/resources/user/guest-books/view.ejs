<%- include('../layouts/header') -%>
  <div class="content-wrapper">   
  <div class="container">
  <div class="row">
  	<div class="col-12">
	    <div class="card mt-4 ml-2">
    		<div class="card-body">
    			<div class="row">
    				<div class="col-3">
	    				<form method="GET" action="/user/guest-books" class="d-flex flex-row">
    						<input type="text" name="description" class="form-control">    					
		    				<button class="btn btn-primary ml-3 mr-3">Search</button>
    					</form>
    				</div>
    				<div class="offset-6">
    					<button class="btn btn-primary"
                            onclick="window.location='/user/guest-books/add'">Tambah</button>
    				</div>
    			</div>

	    		<table class="table table-hover mt-4">
    				<tr>
	    				<td><b>Id</b></td>
    					<td><b>Description</b></td>
    					<td><b>Dibuat</b></td>
    					<td><b>Action</b></td>
    				</tr>
    				<% data.rows.forEach(item => { %>
	    				<tr>
	    					<td><%= item.id %></td>
	    					<td><%= item.description %></td>
	    					<td><%= item.createdAt %></td>
	    					<td>
	    						<button class="btn btn-danger"
	    							onclick="window.location='/user/guest-books/destroy/<%= item.id %>'">
	    							Hapus
	    						</button>
	    					</td>
    					</tr>
    				<% }) %>
    				<% if(data.rows.length < 1) { %>
    					<tr>
    						<td colspan="4" class="text-center">
    							<h5>Data tidak ditemukan</h5>
    						</td>
    					</tr>
    				<% } %>
    			</table>

    			<div class="mt-3">
    			 <% if(data.page > 1){ %> 
    			 	<button class="btn btn-success"
    			 		onclick="window.location='/user/guest-books?page=<%= parseInt(data.page)-1 %>'">
    			 		Sebelumnya
    			 	</button>
    			 <% } %>
	
				<% if(data.page < data.pages){ %>   			
    			 	<button class="btn btn-success"
    			 		onclick="window.location='/user/guest-books?page=<%= parseInt(data.page)+1 %>'">Selanjutnya</button>
    			 <% } %>
    			</div>
    		</div>
    	</div>
	  </div>
    </div>
   </div>
  </div>
<%- include('../layouts/footer') -%>